<?xml version="1.0" encoding="utf-8" ?>
<c2eventsheet>
    <!--All the 'name' attributes are ignored by Construct 2 - they are there for readability only.-->
    <name>ES Game Over</name>
    <events>
        <comment>Espera um segundo e ativa a possibilidade de prosseguir no jogo.</comment>
        <event-block>
            <conditions>
                <condition id="-2" name="On start of layout" type="System" />
            </conditions>
            <actions>
                <action id="-16" name="Wait" type="System">
                    <param id="0" name="Seconds">1.0</param>
                </action>
                <action id="-12" name="Set group active" type="System">
                    <param id="0" name="Group name">&quot;GO_prossegue&quot;</param>
                    <param id="1" name="State">1</param>
                </action>
            </actions>
        </event-block>
        <event-group description="Volta a tela inicial do jogo, quando alguma interação é feita sobre a tela." inactive="1" title="GO_prossegue">
            <sub-events>
                <event-block any="1">
                    <conditions>
                        <condition id="1" name="On any click" type="Mouse" />
                        <condition id="0" name="On touch start" type="Touch" />
                        <condition id="1" name="On any key pressed" type="Keyboard" />
                    </conditions>
                    <actions>
                        <action id="-12" name="Set group active" type="System">
                            <param id="0" name="Group name">&quot;GO_prossegue&quot;</param>
                            <param id="1" name="State">0</param>
                        </action>
                        <action id="-2" name="Go to layout" type="System">
                            <param id="0" name="Layout">Main Menu</param>
                        </action>
                    </actions>
                </event-block>
            </sub-events>
        </event-group>
    </events>
</c2eventsheet>
